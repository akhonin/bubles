<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cupl_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upgrade"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_bg_full"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/cleaner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bubble_maine_bg"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/speed_test"
        app:layout_constraintStart_toStartOf="@+id/adblock"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cleaner"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Cleaner"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/speed_test"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/bubble_maine_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/adblock"
        app:layout_constraintStart_toEndOf="@+id/adblock"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_speed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Speed test"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/adblock"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bubble_maine_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="140dp"
        app:layout_constraintEnd_toStartOf="@+id/speed_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_adblock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Adblock"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>