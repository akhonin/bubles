<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sped_test_bg"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cursor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_speedometr"
        app:layout_constraintTop_toTopOf="@id/speed_text"
        app:layout_constraintBottom_toBottomOf="@+id/speed_text"
        app:layout_constraintEnd_toStartOf="@id/speed_text"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Test"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/speedometr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spedometr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintBottom_toTopOf="@+id/result_item"
        />
    <ImageView
        android:id="@+id/speed_shower"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/speed_shower"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="90dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/speedometr"
        app:layout_constraintBottom_toBottomOf="@id/speedometr"
        app:layout_constraintEnd_toEndOf="@+id/speedometr"
        app:layout_constraintTop_toTopOf="@+id/speedometr"
        />
    <LinearLayout
        android:id="@+id/start_test"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bubble_maine_bg"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/speedometr"
        app:layout_constraintStart_toStartOf="@+id/speedometr"
        app:layout_constraintEnd_toEndOf="@+id/speedometr"
        app:layout_constraintBottom_toBottomOf="@+id/speedometr"
        >
        <ImageView
            android:id="@+id/icon_speed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_speed_btn"
            />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:text="START"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/result_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/speed_test_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result:"
            android:textSize="24sp"
            android:textColor="@color/base_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download (Mbps):"
                android:textColor="@color/grey_color"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/download_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/grey_color"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload (Mbps):"
                android:textColor="@color/grey_color"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/upload_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/grey_color"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ping (ms):"
                android:textColor="@color/grey_color"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/ping_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/grey_color"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect type:"
                android:textSize="18sp"
                android:textColor="@color/grey_color"
                />
            <TextView
                android:id="@+id/connect_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/grey_color"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ip-Adress:"
                android:textSize="18sp"
                android:textColor="@color/grey_color"
                />
            <TextView
                android:id="@+id/ip_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/grey_color"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provider:"
                android:textSize="18sp"
                android:textColor="@color/grey_color"
                />

            <TextView
                android:id="@+id/provide_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-"
                android:maxLength="20"
                android:textColor="@color/grey_color"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>